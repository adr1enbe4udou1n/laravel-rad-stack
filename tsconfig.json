{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client", "@types/jest"],
        "paths": {
            "@admin/*": ["./resources/admin/*"],
            "@front/*": ["./resources/front/*"]
        },
        "plugins": [{ "name": "typescript-vue-plugin" }]
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.tsx",
        "resources/**/*.vue"
    ]
}
